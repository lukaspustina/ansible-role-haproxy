HTTP/1.0 {{ item.code }} {{ item.description }}
Cache-Control: no-cache
Connection: close
Content-Type: text/html

<!DOCTYPE html>
<html lang="de" dir="ltr">
<head>
  <title>{{ item.description }} | {{ _haproxy.error_pages.title }}</title>
  <link href='https://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"/>
  <style>
    html, body {
      background-color: #e8ecef;
      font-family: 'Lato', sans-serif;
      text-align: center;
      font-size: 1.2em;
      line-height: 1.6em;
      color: #333;
    }
    div {
      text-align: center;
      margin: 0.7em auto;
      width: 80%;
      max-width: 800px;
    }
    a {
      font-size: 16px;
      text-decoration: none;
      text-transform: uppercase;
      display: inline-block;
      font-weight: bold;
      background-color: #ed7b3d;
      color: white;
      border-radius: 5px;
      padding: 10px 20px;
      margin: 5px;
    }
    a:hover {
      background-color: #f38a51;
    }
    .box {
      background-color: white;
      padding: 7px;
      border-radius: 4px;
      box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.05);
    }
    .error {
      font-size: 2em;
      margin: 1.2em auto;
      color: #cf2d2d;
    }
  </style>
</head>
<body>
  <div>
    <div class="error"><i class="fa fa-exclamation-circle"></i> Fehler ({{ item.code }})</div>
    <div class="box">
      <div class="description">{{ item.description }}</div>
      <div class="comment">{{ item.comment }} Sollte das Problem bestehen bleiben, wenden Sie sich bitte an unseren Support.</div>
    </div>
    <div>
      <a href="mailto:{{ _haproxy.error_pages.e_mail }}"><i class="fa fa-envelope"></i> E-mail</a>
      <a href="tel:{{  _haproxy.error_pages.phone }}"><i class="fa fa-phone"></i> {{ _haproxy.error_pages.phone }}</a>
    </div>
  </div>
</body>
</html>

